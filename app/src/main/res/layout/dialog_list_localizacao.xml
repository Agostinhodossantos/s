<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="@string/selecione_a_sua_localizacao"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_localizacao_maputo"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_height="wrap_content"
                                android:text="Maputo"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>




                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_localizacao_gaza"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <CheckBox
                                android:id="@+id/checkbox_gaza"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:clickable="false"
                                />
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_height="wrap_content"
                                android:text="Gaza"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>




                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_localizacao_inhabane"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_height="wrap_content"
                                android:text="Inhambane"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>




                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_localizacao_sofala"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_height="wrap_content"
                                android:text="Sofala"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>




                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_localizacao_manica"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_height="wrap_content"
                                android:text="Manica"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>




                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_localizacao_tete"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_height="wrap_content"
                                android:text="Tete"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>




                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_localizacao_zambezia"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_height="wrap_content"
                                android:text="Zambezia"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>




                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_localizacao_nampula"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_height="wrap_content"
                                android:text="Nampula"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>




                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_localizacao_niassa"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_height="wrap_content"
                                android:text="Niassa"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>




                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_localizacao_cabo_del"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_height="wrap_content"
                                android:text="Cabo Delgado"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>