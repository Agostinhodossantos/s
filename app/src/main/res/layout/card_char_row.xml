<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/card_chat"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="81dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="1dp"
            android:id="@+id/img_perfil"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            />

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/user_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agostinho Dos Santos"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title"
                />
            <TextView
                android:id="@+id/data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08/08/19"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:paddingTop="30dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_notificacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check_gray"
                    />
                <TextView
                    android:id="@+id/ultima_mensagem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bom dia"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>